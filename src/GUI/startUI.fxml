<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="320.0" prefWidth="240.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.StartUI">
    <VBox prefHeight="320.0" prefWidth="240.0">
        <MenuBar prefHeight="25.0">
            <Menu fx:id="settingsMenu" mnemonicParsing="false" text="设置">
                <items>
                    <MenuItem fx:id="languageSetting" mnemonicParsing="false" text="语言" onAction="#languageSelection"/>
                </items>
            </Menu>
            <Menu fx:id="helpMenu" mnemonicParsing="false" text="帮助">
                <MenuItem fx:id="about" mnemonicParsing="false" onAction="#aboutAction" text="关于"/>
                <MenuItem fx:id="licence" mnemonicParsing="false" onAction="#licenceAction" text="开源许可证"/>
                <MenuItem fx:id="changelogView" mnemonicParsing="false" onAction="#changelogAction" text="查看更新日志"/>
            </Menu>
        </MenuBar>
        <VBox alignment="CENTER" prefHeight="295.0" prefWidth="240.0" spacing="30.0">
            <Label text="WinLZZ">
                <font>
                    <Font size="36.0"/>
                </font>
            </Label>
            <Button fx:id="compressButton" mnemonicParsing="false" onAction="#compressMode" text="压缩">
                <font>
                    <Font size="18.0"/>
                </font>
            </Button>
            <Button fx:id="uncompressButton" mnemonicParsing="false" onAction="#uncompressMode" text="解压">
                <font>
                    <Font size="18.0"/>
                </font>
            </Button>
        </VBox>
    </VBox>
</AnchorPane>
